<Window x:Class="WarNotes.View.UpdateView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarNotes.View"
        mc:Ignorable="d"
        
        Title="UpdateUserProfile" Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="LightBlue" 
        AllowsTransparency="True">
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/background2.jpeg"/>
        </Border.Background>
        <Border CornerRadius="12">
            <Grid>
                <Image Source="/Images/user.png" Margin="589,24,589,512" />
                <StackPanel
                            Orientation="Vertical"
                            Margin="440,170,440,20">
                    <TextBlock Text="Редагування профілю"
                               Foreground="Black"
                               FontSize="29"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Ім'я"
                               Foreground="Black"
                               FontSize="24"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,20,0,0"/>
                    <TextBox Text ="{Binding FirstName}"
                             x:Name="txtName"
                             FontSize="25"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                              Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="Black"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="24,0,0,0"
                             Background="Transparent">
                    </TextBox>
                    <TextBlock Text="Прізвище"
                               Foreground="Black"
                               FontSize="24"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,5,0,0"/>
                    <TextBox Text ="{Binding LastName}"
                             x:Name="txtLast"
                             FontSize="25"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="Black"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="24,0,0,0"
                             Background="Transparent">
                    </TextBox>
                    <TextBlock Text="E-mail"
                               Foreground="Black"
                               FontSize="24"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,5,0,0"/>
                    <TextBox Text ="{Binding Email}"
                             x:Name="txtMail"
                             FontSize="25"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="Black"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="24,0,0,0"
                             Background="Transparent">
                    </TextBox>
                    <TextBlock Text="Старий пароль"
                               Foreground="Black"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,5,0,0"/>
                    <PasswordBox x:Name="txtPass"
                             FontSize="25"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="Black"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="24,0,0,0" HorizontalAlignment="Left" Width="220"
                             Background="Transparent">
                    </PasswordBox>
                    <TextBlock Text="Новий пароль"
                               Foreground="Black"
                               FontSize="25"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,5,0,0"/>
                    <PasswordBox x:Name="txtPass2"
                             FontSize="25"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="Black"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="24,0,0,0" HorizontalAlignment="Left" Width="220"
                             Background="Transparent">
                    </PasswordBox>
                    <TextBlock x:Name ="ShowResult"
                               TextAlignment="Center"
                               Visibility="Hidden"
                               FontSize="17"
                               FontWeight="Medium"
                               FontFamily="Montserrat"                             
                               Margin="0,20,200,0" Width="180"/>
                </StackPanel>
                <Button x:Name="saveChanges"                          
                            BorderThickness="0"
                            Content="Зберегти зміни"
                            Foreground="Black"
                            FontSize="18"
                            FontWeight="Bold"
                            FontFamily="Montserrat"
                            Cursor="Hand"                           
                            Margin="0,550,200,0"
                            Click="saveChanges_Click" Width="180" Height="50">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="CornflowerBlue"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="BlueViolet"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="180" Height="50"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="exit"                          
                            BorderThickness="0"
                            Content="Вийти"
                            Foreground="Black"
                            FontSize="18"
                            FontWeight="Bold"
                            FontFamily="Montserrat"
                            Cursor="Hand"                           
                            Margin="200,550,0,0"
                            Click="exit_Click" Width="180" Height="50">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Aqua"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="BlueViolet"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="180" Height="50"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
    </Border>
</Window>
